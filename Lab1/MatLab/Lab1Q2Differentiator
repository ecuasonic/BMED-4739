if ~isempty(instrfindall)
    fclose(instrfind);
    delete(instrfind);
end
clear;

arduino = serial("/dev/cu.usbmodem14201","BaudRate", 115200);

fopen(arduino);

A = 90;
omega = 1;
dt = 0.2;
t = 0;

tic
prevTheta = 0;
while true
    
    theta = A*sin(omega*t);
    fprintf(arduino, '%f\n', theta - prevTheta);
    pause(.9);
    t = t+dt
    prevTheta = theta;
end

clear arduino;
